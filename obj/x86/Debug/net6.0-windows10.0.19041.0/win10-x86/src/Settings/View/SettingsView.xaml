                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                    <TextBlock Text="데이터 경로 설정 (CL03)" FontWeight="Bold"/>
                    <TextBlock x:ConnectionId='3' x:Name="txt_CL03_directory" Foreground="Gray"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">

                <Button x:ConnectionId='2' x:Name="btn_setData_CL03" Content="경로 설정" HorizontalAlignment="Right"                       />

            </Grid>

        </Grid>

        <Grid Grid.Row="3" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="앱 정보" FontWeight="Bold"/>
                <TextBlock Margin="0,20,0,0" Text="DeepMind 데이터 관리 시스템 1.0.0"/>
