                <Button x:ConnectionId='6' x:Name="btn_setData_CL01" Content="경로 설정" HorizontalAlignment="Right"                        />

            </Grid>

        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
