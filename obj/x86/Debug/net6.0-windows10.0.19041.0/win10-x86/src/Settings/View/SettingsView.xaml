            <Grid Grid.Column="1">

                <Button x:ConnectionId='4' x:Name="btn_setData_CL02" Content="경로 설정" HorizontalAlignment="Right"                       />

            </Grid>

        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
